<Window x:Class="OHMDesktopUI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OHMDesktopUI.Views"
        mc:Ignorable="d"
        Title="ShellView" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="18">
            <MenuItem Header="_File"></MenuItem>
            <MenuItem Header="_Account">
                <MenuItem x:Name="Login" Header="_Login" />
            </MenuItem>
            <MenuItem x:Name ="Reservation" Header="_Reservation"></MenuItem>
            <MenuItem x:Name ="Client" Header="_Client"></MenuItem>
            <MenuItem x:Name ="Room" Header="_Room"></MenuItem>
            <MenuItem x:Name ="CheckIn" Header="Check_In"></MenuItem>
            <MenuItem x:Name ="CheckOut" Header="Check_Out"></MenuItem>
        </Menu>

        <Grid>
            <ContentControl x:Name="ActiveItem" Margin="20 5 20 20" />
        </Grid>
    </DockPanel>
    
    
</Window>
